{
  "name": "@pramaia/plugin-development-kit",
  "version": "1.0.0",
  "description": "Plugin Development Kit for PramaIA Workflow Nodes",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "pramaia-pdk": "dist/cli/index.js"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:lib": "tsc && vite build --mode lib",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "create-plugin": "node dist/cli/create-plugin.js",
    "validate-plugin": "node dist/cli/validate-plugin.js",
    "package-plugin": "node dist/cli/package-plugin.js"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/ui": "^2.0.0",
    "eslint": "^9.0.0",
    "typescript": "~5.8.3",
    "vite": "^7.0.4",
    "vite-plugin-dts": "^4.0.0",
    "vitest": "^2.0.0"
  },
  "dependencies": {
    "@rjsf/core": "^5.24.12",
    "ajv": "^8.17.0",
    "chalk": "^5.3.0",
    "chokidar": "^4.0.0",
    "commander": "^12.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^5.1.0",
    "express-fileupload": "^1.5.2",
    "inquirer": "^11.0.0",
    "zod": "^3.23.0"
  },
  "files": [
    "dist",
    "templates",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "pramaia",
    "workflow",
    "plugin",
    "pdk",
    "node",
    "development-kit"
  ],
  "author": "PramaIA Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pramaia/plugin-development-kit.git"
  },
  "bugs": {
    "url": "https://github.com/pramaia/plugin-development-kit/issues"
  },
  "homepage": "https://github.com/pramaia/plugin-development-kit#readme"
}
