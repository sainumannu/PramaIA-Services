{
  "name": "core-data-plugin",
  "display_name": "Data Core",
  "version": "1.0.0",
  "description": "Plugin con i nodi di elaborazione dati per i workflow PramaIA",
  "author": "PramaIA Team",
  "license": "MIT",
  "pdk_version": "^1.0.0",
  "engine_compatibility": "^1.0.0",
  "nodes": [
    
    {
      "id": "file_cleanup_node",
      "name": "File Cleanup / Archiver",
      "type": "file-system",
      "category": "File System",
      "description": "Rimuove o archivia file dal filesystem.",
      "icon": "ðŸ§¹",
      "color": "#607D8B",
      "entry": "src/resolvers/file_cleanup_resolver.py",
      "inputs": [
        { "name": "file_path", "type": "string", "required": true, "description": "Percorso assoluto del file da rimuovere o archiviare" },
        { "name": "mode", "type": "string", "required": false, "description": "ModalitÃ : 'delete' o 'archive' (default: archive)" },
        { "name": "backup_dir", "type": "string", "required": false, "description": "Cartella di backup per archiviazione (se archive)" },
        { "name": "log", "type": "boolean", "required": false, "description": "Se true, logga l'operazione" }
      ],
      "outputs": [
        { "name": "result", "type": "string", "description": "Messaggio di esito" }
      ],
      "configSchema": {
        "type": "object",
        "properties": {
          "default_mode": { "type": "string", "enum": ["delete", "archive"], "default": "archive" },
          "default_backup_dir": { "type": "string", "description": "Cartella di default per archiviazione" }
        }
      }
    }
  ],
  "dependencies": {
    "pandas": ">=1.0.0",
    "jsonpath-ng": ">=1.5.0"
  }
}
